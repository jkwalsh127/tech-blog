{{#each posts as |post| }}
<div class="row mt-3">
    <div class=" col-md-10 card">
        <div class="card-head">
            <h1><a class="post-title" href="/post/{{post.id}}">{{post.name}}NameName</a></h1>
            <h3 class="post-date">Posted by {{project.user.username}} on {{post.date}}DateDate</h3>
        </div>
        <div class="card-content-wrap"
        <p>{{post.content}}ContentContent</p>
    </div>
</div>
{{/each}}